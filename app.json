{
    "id": "nl.tonversteeg.pushover",
    "name": {
        "en": "Pushover Notifications"
    },
    "version": "0.0.4",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Ton Versteeg",
        "email": "tonversteeg1@gmail.com"
    },
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "internet",
    "description": {
    "en": "Pushover notifications for Homey",
    "nl": "Pushover notificatie voor Homey"
    },
    "permissions": ["homey:manager:ledring"
    ],
    "flow": {
        "actions": [
        {
            "id": "pushoverSend",
            "title": {
                "en": "Pushover notification",
                "nl": "Pushover notificatie"
            },
            "args": [
              {
                  "name":"message",
                  "type":"text",
                  "placeholder":{
                     "en":"Message",
                     "nl":"Bericht"
                  }
               },
               {
                "name": "priority",
                "type": "dropdown",
                "values": [
                  { "id": "Normal", "label": { "en": "Normal" }},
                  { "id": "Lowest", "label": { "en": "Lowest" }},
                  { "id": "Low", "label": { "en": "Low" }},
                  { "id": "High", "label": { "en": "High" }}
                ],
                "placeholder": { "en": "Priority" }
              }
            ]
        },
        {
            "id": "pushoverSend_device",
            "title": {
                "en": "Pushover notification (Device)",
                "nl": "Pushover notificatie (Apparaat)"
            },
            "args": [
              {
                  "name":"device",
                  "type":"autocomplete",
                  "placeholder":{
                     "en":"Device name",
                     "nl":"Apparaat naam"
                  }
            	},
            	{
                  "name":"message",
                  "type":"text",
                  "placeholder":{
                     "en":"Message",
                     "nl":"Bericht"
                  }
               },
               {
                "name": "priority",
                "type": "dropdown",
                "values": [
                  { "id": "Normal", "label": { "en": "Normal" }},
                  { "id": "Lowest", "label": { "en": "Lowest" }},
                  { "id": "Low", "label": { "en": "Low" }},
                  { "id": "High", "label": { "en": "High" }}
                ],
                "placeholder": { "en": "Priority" }
              }
            ]
        }
      ]
    },
    "dependencies": {
    		"pushover-notifications": "*",
    		"request": "*"
    }
}
